@model IEnumerable<AdmNerdGo.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<div class="titulo-cat-sub">
    <h1>Categorias e Subcategorias</h1>
</div>

<div class="titulo-categoria">
    <h4>Categoria</h4>
</div>

<p class="botao-criar-cat">
    <a asp-action="Create">Criar categoria</a>
</p>

@if (TempData["MSG_S"] != null)
{
    <p class="alert alert-success">@ViewData["MSG_S"]</p>
}

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Descricao)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.CategoriaPaiId)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var categoria in Model)
            {
                <tr>
                    <th scope="row">@categoria.Id</th>
                    <td>@categoria.Descricao</td>
                    <td>
                        @Html.DisplayFor(modelItem => categoria.CategoriaPai.Id)
                        @Html.DisplayFor(modelItem => categoria.CategoriaPai.Descricao)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@categoria.Id" class="btn btn-secondary">Editar</a>
                        <a asp-action="Delete" asp-route-id="@categoria.Id" class="btn btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
